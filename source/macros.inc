; ******************************************************************************
;
;						Set 16 byte address to constant
;
; ******************************************************************************

set16 	.macro
		lda 	#(\2) & $FF
		sta 	\1
		lda 	#(\2) >> 8
		sta 	\1+1
		.endm

; ******************************************************************************
;
;							 Start an expression
;
; ******************************************************************************

StartCommand .macro
		plx
		.endm

; ******************************************************************************
;
;						End an Expression, go to next
;
; ******************************************************************************

NextCommand .macro
		jmp 	ExpressionLoop
		.endm

; ******************************************************************************
;
;								Report an Error
;
; ******************************************************************************
						
rerror	.macro
		jsr 	ErrorHandler
		.text 	\1,0
		.endm

